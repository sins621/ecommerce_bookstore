<table class="user-table">
  <tr>
    <th>email</th>
    <th>role</th>
    <th>actions</th>
  </tr>
  <% users.forEach((user) => { %>
  <tr id="row-<%= user.user_id %>">
    <td><%= user.email %></td>
    <td>
      <% roles.forEach(role => { %>
      <% if (role.role !== "user") { %>
      <%= role.role %>
      <input type="checkbox" class="role-checkbox" name="<%= role.role %>"
          id="<%= user.user_id %>-<%= role.id %>"
          <%= user.roles.includes(role.role) && "checked" %>
          onclick="updateRole('<%= user.user_id %>','<%= role.id %>')">
      <% } %>
      <% }) %>
    </td>
    <td>
      <button onclick="removeUser('<%= user.user_id %>')">remove</button>
    </td>
    <% }); %>
  </tr>
</table>