{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch with nodemon",
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
        "program": "${workspaceFolder}/index.js",
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }
